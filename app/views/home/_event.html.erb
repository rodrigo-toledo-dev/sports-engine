<div class="box">
    
    <h3>Events in <%= event_group[0] %></h3>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Sport Category</th>
                <th>Title</th>
                <th>Team Names</th>
            </tr>
        </thead>
        
        <tbody>
            <% event_group[1].each do |event| %>
            <tr>
                <td><%=event.event_date%></td>
                <td><%=event.event_category.name%></td>
                <td><%=event.title%></td>
                <td><%=event.teams%></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
<hr />
